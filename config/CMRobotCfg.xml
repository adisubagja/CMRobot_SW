<?xml version="1.0"?>
<CMRobot>
    <!-- ============ Robot Setting ======================================================
    robot_name : flexivRobot
    !!!! robot_name should be same with the urdf and simulator file name and their dirctory
    ===================================================================================-->
    <robot>
        <robot_name> flexivRobot </robot_name>
        <robot_urdf>.\robots\flexivRobot\flexivRobot.urdf</robot_urdf>
        <gravit>0.0,0.0,-9.8 </gravit>
        <robot_type>Flexiv</robot_type>
    </robot>

    <!-- ============ Robot Target Control Point Transformation ==============================
    position_in_link : the position in parent link coordinate [m]
    orientation_in_link : quentention [w x y z]
    ======================================================================== -->
    <robot_tcp>
        <parent_link_name>Link7</parent_link_name>
        <position_in_link>0.0 0.0 0.074</position_in_link>
        <orientation_in_link>0.0 0.0 0.0 1.0 </orientation_in_link>
    </robot_tcp>
</CMRobot>
